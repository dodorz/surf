[LLM]
; Default LLM provider name
provider = LLM1

[LLM.LLM1]
; OpenAI-compatible API configuration for L1
base_url = https://api.openai.com/v1
api_key = your_api_key_here
model = gpt-3.5-turbo

[LLM.LLM2]
; Additional LLM provider example (DeepSeek)
base_url = https://api.deepseek.com/v1
api_key = your_deepseek_api_key
model = deepseek-chat

[Output]
; Target language for translation (e.g., zh-cn, en, etc.)
target_language = zh-cn
; Directory to save Markdown notes
note_dir = ./notes
; Directory to save PDF files (default: current directory)
pdf_dir = ./pdf
; Directory to save Audio files (default: current directory)
audio_dir = ./auido
; Directory to save HTML files (default: current directory)
html_dir = ./web

[TTS]
; Support: edge-tts
engine = edge-tts
; Voice example: zh-CN-XiaoxiaoNeural, zh-CN-YunxiNeural, en-US-AriaNeural
voice = zh-CN-XiaoxiaoNeural
; Rate: +0%, +10%, -10%
rate = +0%
; Volume: +0%, +10%, -10%
volume = +0%

[Network]
; Proxy mode: auto (env vars, default), no (no proxy), win (Windows registry), custom (use custom_proxy)
proxy_mode = auto
; Custom proxy URL (e.g., http://127.0.0.1:7890)
custom_proxy =

[publish]
; Default publish target
target = pastebin

[publish.pastebin]
; Pastebin API key - get from https://pastebin.com/api/api-doc.html
; Register at https://pastebin.com/signup to get your API key
api_dev_key = your_pastebin_api_key_here
; Optional: Paste expiration (N, 10M, 1H, 1D, 1W, 1M, 1Y)
; api_paste_expire_date = N
; Optional: Paste privacy (0=public, 1=unlisted, 2=private)
; api_paste_private = 0
