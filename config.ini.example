[LLM]
; Default LLM provider name
provider = L1

[LLM.L1]
; OpenAI-compatible API configuration for L1
base_url = https://api.openai.com/v1
api_key = your_api_key_here
model = gpt-3.5-turbo

[LLM.L2]
; Additional LLM provider example (DeepSeek)
base_url = https://api.deepseek.com/v1
api_key = your_deepseek_api_key
model = deepseek-chat

[Output]
; Directory to save Markdown notes
note_dir = ./notes
; Target language for translation (e.g., zh-cn, en, etc.)
target_language = zh-cn
; Directory to save PDF files (default: current directory)
pdf_dir = .
; Directory to save Audio files (default: current directory)
audio_dir = .
; Directory to save HTML files (default: current directory)
html_dir = .

[PDF]
; PDF engine: weasyprint, playwright, pandoc, wkhtmltopdf
engine = playwright
; CSS file for PDF styling (optional)
css_file = pdf_style.css

[TTS]
; Support: edge-tts
engine = edge-tts
; Voice example: zh-CN-XiaoxiaoNeural, zh-CN-YunxiNeural, en-US-AriaNeural
voice = zh-CN-XiaoxiaoNeural
; Rate: +0%, +10%, -10%
rate = +0%
; Volume: +0%, +10%, -10%
volume = +0%

[Network]
; Proxy mode: default (env/system), none, custom
proxy_mode = default
; Custom proxy URL (e.g., http://127.0.0.1:7890)
custom_proxy =
